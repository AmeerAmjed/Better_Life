<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BetterLife" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.AppCompat.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_better_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.BetterLife</item>
    </style>

</resources>