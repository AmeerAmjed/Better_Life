<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BetterLife" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextStyle.ExtraLarge">
        <item name="android:textSize">@dimen/text_extra_large</item>
    </style>

    <style name="TextStyle.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextStyle.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextStyle.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="habitChip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipStrokeColor">@color/green</item>
        <item name="chipSurfaceColor">@color/white</item>
        <item name="chipStrokeWidth">@dimen/stroke_small</item>
    </style>

    <style name="goodHabit">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="badHabit">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/red</item>
    </style>
    
    <style name="Theme.AppCompat.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_better_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.BetterLife</item>
    </style>

    <style name="MaterialButtonStyle">
        <item name="cornerRadius">@dimen/spacing_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="MaterialButtonStyle.MaterialAddButtonStyle">
        <item name="backgroundTint">@color/add_button_style</item>
    </style>

    <style name="MaterialButtonStyle.MaterialCancelButtonStyle">
        <item name="backgroundTint">@color/black_30</item>
    </style>

</resources>