<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.karrar.betterlife.ui.home.HomeViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/habit_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/habit_home_card"
                    style="?attr/materialCardViewFilledStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/spacing_medium"
                    android:backgroundTint="@color/green_8"
                    android:elevation="0dp"
                    app:cardCornerRadius="@dimen/radius_small"
                    app:layout_constraintDimensionRatio="2:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/habit_banner_image"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/spacing_medium"
                    android:elevation="2dp"
                    android:src="@drawable/banner"
                    app:layout_constraintBottom_toBottomOf="@+id/habit_home_card"
                    app:layout_constraintStart_toStartOf="@+id/habit_home_card"
                    app:layout_constraintTop_toTopOf="@id/habit_home_card" />

                <TextView
                    android:id="@+id/habit_card_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/playball_regular"
                    android:gravity="center"
                    android:text="@string/home_banner_text"
                    android:textSize="@dimen/text_extra_large"
                    app:layout_constraintBottom_toBottomOf="@+id/habit_home_card"
                    app:layout_constraintEnd_toEndOf="@+id/habit_home_card"
                    app:layout_constraintStart_toEndOf="@+id/habit_banner_image"
                    app:layout_constraintTop_toTopOf="@+id/habit_home_card" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:orientation="horizontal"
                    android:scrollbars="none"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/habit_home_card" />

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_medium"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/home_title"
                    android:textSize="@dimen/text_extra_large"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_day" />


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/habits_chipGroup"
                    checkedChipButtonId="@={viewModel.checkedBtnObs}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_text"
                    app:singleSelection="false" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:backgroundTint="@color/green"
            android:onClick="@{() -> viewModel.navigateToAddHabitDialog()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_baseline_add_24"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>